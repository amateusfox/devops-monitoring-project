global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_local'
    static_configs:
      - targets: ['172.17.0.1:9100']  # ← для monitoring-vm
    labels:
      instance: 'monitoring-vm'
      role: 'docker-monitoring'

  - job_name: 'node_exporter_control'
    static_configs:
      - targets: ['95.163.226.71:9100']  # ← IP control-vm
    labels:
      instance: 'control-vm'
      role: 'ansible-git-jenkins'
